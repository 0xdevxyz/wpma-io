# Email Encryption & Recovery System Configuration
# =============================================

# Master Encryption Keys
EMAIL_MASTER_SECRET=your-super-secure-master-secret-key-here
EMAIL_ENCRYPTION_SALT=wpma-email-encryption-salt-2024
RECOVERY_SALT=wpma-recovery-salt-2024

# AWS S3 Configuration for Email Backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
EMAIL_BACKUP_BUCKET=wpma-email-backups

# Admin Authentication for Recovery Operations
ADMIN_USERS=admin1,admin2,admin3
ADMIN_PASSWORD=your-secure-admin-password

# Email Retention and Cleanup Settings
EMAIL_RETENTION_DAYS=365
EMAIL_AUTO_ENCRYPT=true
EMAIL_BACKUP_ENABLED=true
EMAIL_AUDIT_LOGGING=true

# Recovery System Configuration
RECOVERY_EMERGENCY_ACCESS=true
RECOVERY_LEGAL_COMPLIANCE=true
RECOVERY_DATA_MIGRATION=true
RECOVERY_SYSTEM_RECOVERY=true
RECOVERY_AUDIT_TRAIL=true

# Security Settings
EMAIL_ENCRYPTION_ALGORITHM=aes-256-gcm
EMAIL_KEY_LENGTH=32
EMAIL_IV_LENGTH=16
EMAIL_SALT_LENGTH=64
EMAIL_TAG_LENGTH=16
EMAIL_ITERATIONS=100000

# Audit Logging Configuration
EMAIL_AUDIT_LOG_RETENTION_DAYS=365
EMAIL_RECOVERY_LOG_RETENTION_DAYS=180
EMAIL_AUDIT_IP_LOGGING=true
EMAIL_AUDIT_USER_AGENT_LOGGING=true

# Backup Configuration
EMAIL_BACKUP_ENCRYPTION=true
EMAIL_BACKUP_COMPRESSION=true
EMAIL_BACKUP_RETENTION_DAYS=730
EMAIL_BACKUP_AUTO_CLEANUP=true

# Performance Settings
EMAIL_BATCH_SIZE=100
EMAIL_MAX_CONCURRENT_OPERATIONS=10
EMAIL_OPERATION_TIMEOUT=30000
EMAIL_CLEANUP_BATCH_SIZE=1000

# Monitoring and Alerting
EMAIL_MONITORING_ENABLED=true
EMAIL_ALERT_ON_FAILURE=true
EMAIL_ALERT_ON_CLEANUP_ERROR=true
ADMIN_EMAIL=admin@wpma.io
ALERT_EMAIL=alerts@wpma.io

# GDPR Compliance Settings
EMAIL_GDPR_COMPLIANCE=true
EMAIL_RIGHT_TO_FORGOTTEN=true
EMAIL_DATA_PORTABILITY=true
EMAIL_CONSENT_TRACKING=true
EMAIL_PRIVACY_BY_DESIGN=true

# Development and Testing
EMAIL_DEBUG_MODE=false
EMAIL_TEST_MODE=false
EMAIL_MOCK_ENCRYPTION=false
EMAIL_LOG_LEVEL=info

# Cron Job Configuration
EMAIL_CLEANUP_SCHEDULE=0 2 * * *
EMAIL_WEEKLY_CLEANUP_SCHEDULE=0 3 * * 0
EMAIL_MONTHLY_STATS_SCHEDULE=0 4 1 * *

# Rate Limiting for Email Operations
EMAIL_RATE_LIMIT_WINDOW_MS=3600000
EMAIL_RATE_LIMIT_MAX_REQUESTS=3
EMAIL_RECOVERY_RATE_LIMIT_WINDOW_MS=3600000
EMAIL_RECOVERY_RATE_LIMIT_MAX_REQUESTS=3

# Export and Import Settings
EMAIL_EXPORT_EXPIRY_DAYS=7
EMAIL_EXPORT_MAX_SIZE_MB=50
EMAIL_IMPORT_MAX_SIZE_MB=50
EMAIL_EXPORT_DOWNLOAD_LIMIT=3

# Notification Settings
EMAIL_NOTIFICATION_TYPES=notification,alert,report,recovered
EMAIL_NOTIFICATION_RETENTION_DAYS=365
EMAIL_ALERT_RETENTION_DAYS=180
EMAIL_REPORT_RETENTION_DAYS=730

# Database Configuration
EMAIL_DB_CONNECTION_POOL_SIZE=10
EMAIL_DB_QUERY_TIMEOUT=30000
EMAIL_DB_TRANSACTION_TIMEOUT=60000

# Error Handling
EMAIL_ERROR_RETRY_ATTEMPTS=3
EMAIL_ERROR_RETRY_DELAY_MS=1000
EMAIL_ERROR_LOG_LEVEL=error
EMAIL_ERROR_NOTIFICATION=true

# Security Validation
EMAIL_VALIDATE_PASSWORD_STRENGTH=true
EMAIL_MIN_PASSWORD_LENGTH=8
EMAIL_REQUIRE_SPECIAL_CHARS=true
EMAIL_REQUIRE_NUMBERS=true
EMAIL_REQUIRE_UPPERCASE=true

# Recovery Key Management
EMAIL_RECOVERY_KEY_ROTATION_DAYS=90
EMAIL_RECOVERY_KEY_BACKUP=true
EMAIL_RECOVERY_KEY_ENCRYPTION=true
EMAIL_RECOVERY_KEY_STORAGE=secure

# Integration Settings
EMAIL_SMTP_INTEGRATION=true
EMAIL_WEBHOOK_INTEGRATION=false
EMAIL_API_INTEGRATION=true
EMAIL_PLUGIN_INTEGRATION=true

# Advanced Settings
EMAIL_ADVANCED_ENCRYPTION=true
EMAIL_MULTI_TENANT_SUPPORT=true
EMAIL_SCALABILITY_ENABLED=true
EMAIL_HIGH_AVAILABILITY=true 