# Production Environment Variables for Hetzner Server
# Frontend: app.wpma.io
# Backend: api.wpma.io

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (PostgreSQL on Hetzner)
DATABASE_URL=postgresql://wpma_user:wpma_password@localhost:5432/wpma_db

# Redis Configuration (Redis on Hetzner)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production # <-- BITTE ERSETZEN

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration for Backups
AWS_ACCESS_KEY_ID=your-aws-access-key # <-- BITTE ERSETZEN
AWS_SECRET_ACCESS_KEY=your-aws-secret-key # <-- BITTE ERSETZEN
AWS_REGION=eu-central-1
AWS_BACKUP_BUCKET=wpma-backups

# Frontend URL
FRONTEND_URL=https://app.wpma.io

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key # <-- BITTE ERSETZEN
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret # <-- BITTE ERSETZEN
STRIPE_BASIC_PRICE_ID=price_basic_plan
STRIPE_PRO_PRICE_ID=price_pro_plan
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan

# Sentry Configuration for Error Tracking
SENTRY_DSN=your-sentry-dsn # <-- BITTE ERSETZEN

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com # <-- BITTE ERSETZEN
SMTP_PASS=your-email-password # <-- BITTE ERSETZEN

# Security Configuration
CORS_ORIGIN=https://app.wpma.io
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration
SSL_KEY_PATH=/etc/letsencrypt/live/api.wpma.io/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/api.wpma.io/fullchain.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_CRON=0 2 * * * # Daily at 2 AM

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=300000 # 5 minutes
PERFORMANCE_MONITORING=true
SECURITY_SCAN_INTERVAL=86400000 # 24 hours

# AI Configuration
AI_INSIGHTS_ENABLED=true
AI_ANALYSIS_INTERVAL=3600000 # 1 hour

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/wpma/api.log

# Cache Configuration
CACHE_TTL=300 # 5 minutes
CACHE_MAX_SIZE=100

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=true
API_DOCUMENTATION_URL=https://api.wpma.io/docs

# WordPress Plugin Configuration
WPMA_PLUGIN_VERSION=1.0.0
WPMA_PLUGIN_UPDATE_URL=https://api.wpma.io/plugin/update
WPMA_PLUGIN_DOWNLOAD_URL=https://api.wpma.io/plugin/download

# Notification Configuration
NOTIFICATION_EMAIL=true
NOTIFICATION_SLACK=false
NOTIFICATION_WEBHOOK=false

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System wird gewartet. Bitte versuchen Sie es spÃ¤ter erneut.

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_CONTROL_MAX_AGE=31536000 # 1 year
GZIP_LEVEL=6

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self';

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_IDLE_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Session Configuration
SESSION_SECRET=your-session-secret-here # <-- BITTE ERSETZEN
SESSION_MAX_AGE=86400000 # 24 hours
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# API Key Configuration
API_KEY_LENGTH=32
API_KEY_PREFIX=wpma_
API_KEY_EXPIRY_DAYS=365

# Backup Encryption
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here # <-- BITTE ERSETZEN

# Monitoring Endpoints
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
STATUS_ENDPOINT=/status

# Error Handling
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_EMAIL=errors@wpma.io
ERROR_LOG_LEVEL=error

# Development Overrides (set to false in production)
DEBUG_MODE=false
TEST_MODE=false
DEMO_MODE=false 
